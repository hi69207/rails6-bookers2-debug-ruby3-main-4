<p id="notice">
  <%= flash[:notice] %>
</p>

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"50x50" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <% if @books.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td></td>
          <td><p>コメント数: <%= @books.book_comments.count %></p></td>
        </tr>
      </table>

      <% @books.book_comments.each do |book_comment| %>
      <div>
        <%= image_tag book_comment.user.get_profile_image, size:"50x50" %>
        <%= book_comment.comment %>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
        <% end %>
      </div>
      <div>
        <%= link_to(book_comment.user) do %>
          <%= book_comment.user.name %>
        <% end %>
      </div>
      <% end %>

      <%= form_with model: [@books, @book_comment] do |f| %>
      <div>
          <%= f.text_area :comment, rows: '5' %>
      </div>
      <div>
          <%= f.submit "送信" %>
      </div>
      <% end %>
    </div>
  </div>
</div>