<h2><%= @title %></h2>
<table class='table'>
  <% if @users.any? %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>        
        <td><%= user.name %></td>
        <td><p>フォロー数: <%= user.following.count %></p></td>
        <td><p>フォロワー数: <%= user.followers.count %></p></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
  <p>ユーザーはいません</p>
  <% end %>
</table>